darkblue = #05668D
midblue = #028090
aqua = #00A896
lightaqua = #02C39A
beige = #F0F3BD

@font-face
	font-family bebas
	src url('../fonts/BEBAS.ttf')

@font-face
	font-family opensans
	src url('../fonts/OpenSans-Regular.ttf')	

.levelDiff
	display inline-block

.greenBack
	background-color green
	
.yellowBack
	background-color yellow
	
.redBack
	background-color red
	
#routediff div
	border-radius 15px
	padding 10px
	border 4px outset black
	margin 0 50px
	
#routediff div:hover
	border 4px inset White

#EZmapOne, #INTmapOne, #ADVmapOne, #EZmapTwo, #EZmapThree, #INTmapTwo, #INTmapThree, #ADVmapTwo, #ADVmapThree, #routeHere
	height 500px
	width 750px
	background-color darkblue
	margin 0 auto .75em

#directions, #directionAdv
	height 500px
	width 500px
	overflow scroll
	background-color lightgray
		
#rentalMap
	position relative
	width 70%
	height 70%

#banner
	background-color darkblue
	text-align center
	margin 0 auto
	padding 0
	font-family bebas
	width 100%

#banner img
	margin-bottom .75em	
	padding-top .75em
	display block
	width 150px
	height auto	

#banner a 
	text-decoration none
	margin 1.5em 2em
	color white
	text-transform uppercase
	font-weight bold
	font-size 20px

.content:before
	clear: both	
	
body
	margin 0
	padding 0	
	font-family opensans
	background-color midblue

#maindesc
	background rgba(255,255,255,0.5)

#maindesc p
	text-align center	

.directive
	background-color aqua
	color white
	text-align center
	font-family opensans
	padding-top 20px
	padding-bottom 20px
	width 20%
	box-shadow 1px 1px 3px #000
	float left



#weatherview h1
	font-size 42px	

#sun
	padding-top 20px	

#routediff
	text-align center
	background-color midblue
	padding-top 20px
	padding-bottom 20px	

#routediff h1
	padding 20px 0px
	font-family bebas
	margin-bottom .75em
		

#rentbike
	background-color lightaqua
	padding-top: 20px
	padding-bottom: 20px
	text-align center	
	height 45vh
#rentbike h1
	padding 20px 0px
	font-family bebas
	margin-bottom .75em
#rentbike h3
	margin-bottom .75em	
#rentbike button
	background-color orange
	border none
	color white
	font-size 16px
	padding 15px 32px
	border-radius 5px
	font-weight bold
	font-family opensans		
	
#gettingStartedDiv
	background url('../images/bikebackground.jpg') no-repeat fixed
	height: 100%
	width: 100%
	box-shadow 1px 1px 2px #000000
	background-size cover


#gettingStartedDiv h1
	text-shadow 1px 1px 2px #000000
	text-align center	
	color: white
	font-size 100px	
	padding-top 100px
	margin-bottom .25em
	font-family bebas

#gettingStartedDiv a
	display block
	margin 0 auto
	background-color orange
	color white
	font-size 16px
	padding 15px 32px
	border-radius 5px
	font-weight bold
	font-family opensans
	width: 80px
	text-decoration none
	text-align center

#gettingStartedDiv a:active
	background-color aqua	

/* Pop out window CSS */

#rentalModal
	display none
	position fixed
	z-index 1
	left 0
	top 0
	width 100%
	height 100%
	overflow auto
	background-color white
	background-color rgba(0,0,0,0.4)
	
#contentModal
	background-color #fefefe
	margin 15% auto
	padding 20px
	border 1px solid #888
	width 80%
#contentModal ul li
	list-style-type none
	text-align center	
.mapbtns button
	background-color orange
	color white	
	font-size 16px
	padding 15px 32px
	border-radius 5px
	margin 0 2px .75em

.mapbtns
	margin 0 auto
	text-align center	
#toggleOff
	color #aaa
	float right
	font-size 28px
	font-weight bold
	
#toggleOff:hover, $toggleOff:focus
	color black
	text-decoration none
	cursor pointer	

/* FOOTER */
footer
	background-color beige
	box-shadow 0px 500px 0px 500px beige

